<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".javaClasses.SplashActivity"
    android:id="@+id/splash_layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/excise_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/excise_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/splash_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:text="EXCISE\n MOTOR VEHICLE\n SEIZURE &amp; CONFISCATION SYSTEM"
            android:textSize="24sp"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/excise_logo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="130dp"
            android:layout_height="30dp"
            app:lottie_fileName="progress.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/footer_text"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/footer_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:text="Excise, Taxation and Narcotics Control Dept"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_bg"
            android:visibility="gone"/>

    </RelativeLayout>














</RelativeLayout>